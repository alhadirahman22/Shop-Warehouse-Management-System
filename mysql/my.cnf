[mysqld]
# General MySQL Configuration
key_buffer_size                 = 128M
max_allowed_packet              = 64M
max_connections                 = 8192
back_log                        = 4096
open_files_limit                = 20240
tmp_table_size                  = 1G
max_heap_table_size             = 1G
innodb_buffer_pool_size         = 10G
innodb_buffer_pool_instances    = 10
innodb_read_io_threads          = 64
innodb_write_io_threads         = 64
innodb_flush_log_at_trx_commit  = 0
innodb_flush_method             = O_DIRECT
innodb_io_capacity              = 20000
# innodb_table_locks            = 0      # This option is deprecated in MySQL 8 and not required
# innodb_lock_wait_timeout      = 0      # You may want to set a timeout value other than 0
sql_mode                        = "NO_ENGINE_SUBSTITUTION"

# Log Configuration
# The following options are deprecated in MySQL 8 and should be removed
# expire_logs_days                = 10
# max_binlog_size                 = 100M

# MariaDB Settings
[mariadb]
thread_cache_size               = 8192
thread_handling                 = pool-of-threads
thread_pool_size                = 12
thread_pool_idle_timeout        = 20
thread_pool_max_threads         = 1024

# Backup and Dump Configuration
[mysqldump]
quick
quote-names
max_allowed_packet              = 16M

# ISAM Check Configuration
[isamchk]
key_buffer_size                 = 16M
